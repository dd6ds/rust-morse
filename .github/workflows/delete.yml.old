
name: Delete main.zip from main branch
on:
 push: 
  branches:
      - main
  pull_request:

jobs:
  delete-file:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          ref: main

      - name: Delete main.zip
        run: |
          ls -lathr
          git rm -f archive/refs/tags/main.zip
          git commit -m "Delete main.zip"
          git push
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

